<?xml version="1.0" encoding="UTF-8"?>
<compiz>
	<plugin name="rubik" useBcop="true">
		<_short>Rubik's Cube</_short>
		<_long>Turn cube into a Rubik's cube</_long>
		<category>Extras</category>
		<deps>
		<relation type="after">
			<plugin>cube</plugin>
		</relation>
		<requirement>
			<plugin>cube</plugin>
		</requirement>
		</deps>
		<display>
			<option name="toggle_key" type="key">
				<_short>Toggle Rubik's cube</_short>
				<_long>Start/stop Rubik's cube effect.</_long>
			</option>
			<option name="toggle_button" type="button">
				<_short>Toggle Rubik's cube</_short>
				<_long>Start/stop Rubik's cube effect.</_long>
			</option>
		</display>

		<screen>
				<option name="speed_factor" type="float">
					<_short>Speed factor</_short>
					<_long>Multiply the speed of rotations by this factor.</_long>
					<default>1</default>
					<min>0.1</min>
					<max>10</max>
					<precision>0.01</precision>
				</option>
				<option name="number_strips" type="int">
					<_short>Rubik Size</_short>
					<_long>Number of horizontal/vertical strips.</_long>
					<default>3</default>
					<min>1</min>
					<max>10</max>
				</option>
				<option name="rotate_all_axes" type="bool">
					<_short>Rotate around all axes</_short>
					<_long>Rotate Rubik's cube around all axes (convert windows to pixmaps also).</_long>
					<default>true</default>
				</option>
				<option name="enable_on_manual_rotate" type="bool">
					<_short>On manual rotate</_short>
					<_long>Enable effect only on cube rotate.</_long>
					<default>true</default>
				</option>
				<option name="rotate_desktop" type="bool">
					<_short>Rotate desktop</_short>
					<_long>Rotate desktop as well as windows.</_long>
					<default>true</default>
				</option>
				<option name="colored_sides" type="bool">
					<_short>Colored Sides</_short>
					<_long>Replace wallpaper with colored sides.</_long>
					<default>false</default>
				</option>
				<option name="enable_depth_test" type="bool">
					<_short>Enable Depth Test</_short>
					<_long>Hide windows that are behind other windows.</_long>
					<default>true</default>
				</option>
				<option name="desktop_caps" type="bool">
					<_short>Desktop caps</_short>
					<_long>Display a desktop for each cap.</_long>
					<default>false</default>
				</option>
		</screen>
	</plugin>
</compiz>
